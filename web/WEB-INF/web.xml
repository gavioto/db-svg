<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>DB-SVG</display-name>
    <distributable/>
    <servlet>
        <servlet-name>MenuController</servlet-name>
        <servlet-class>DBViewer.controllers.MenuViewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SetupViewController</servlet-name>
        <servlet-class>DBViewer.controllers.SetupViewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DiagramViewController</servlet-name>
        <servlet-class>DBViewer.controllers.DiagramViewController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiagramViewController</servlet-name>
        <url-pattern>/Diagram</url-pattern>
        <url-pattern>/diagram</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SetupViewController</servlet-name>
        <url-pattern>/setup</url-pattern>
        <url-pattern>/Setup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuController</servlet-name>
        <url-pattern>/Menu</url-pattern>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <env-entry>
        <description>Path to Available DB definitions</description>
        <env-entry-name>DBXMLPATH</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>/DB-SVG/dbs.xml</env-entry-value>
    </env-entry>
    <env-entry>
        <description>Path to Location of SQLite App DB</description>
        <env-entry-name>AppDBLocation</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>DB-SVG.db</env-entry-value>
    </env-entry>
    <env-entry>
        <description>Failover Path to Available DB definitions</description>
        <env-entry-name>DBXMLPATH2</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>C:\DB-SVG\dbs.xml</env-entry-value>
    </env-entry>
    <env-entry>
        <description>Failover Path to Location of SQLite App DB</description>
        <env-entry-name>AppDBLocation2</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>C:\DB-SVG\DB-SVG.db</env-entry-value>
    </env-entry>
</web-app>
